{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components/index.ts"],
      "@variables": ["styles/_variables.scss"],
      "@redux/*": ["redux/*"],
      "@types": ["types.ts"],
      "@utils": ["utils/utils.ts"]
    }
  }
}
